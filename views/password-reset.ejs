<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Password Reset</title>

  <!-- Supabase JS -->
  <script src="https://unpkg.com/@supabase/supabase-js@2"></script>

  <style>
    body {
      font-family: Arial, sans-serif;
      max-width: 500px;
      margin: 50px auto;
    }
    h1 { text-align: center; }
    form {
      display: flex;
      flex-direction: column;
      gap: 15px;
    }
    input, button {
      padding: 10px;
      font-size: 16px;
    }
    .errors {
      color: red;
      list-style: none;
      padding: 0;
    }
    .success {
      color: green;
      text-align: center;
    }
  </style>
</head>
<body>

<h1>Password Reset</h1>

<!-- Server-side messages -->
<% if (errors && errors.length) { %>
  <ul class="errors">
    <% errors.forEach(err => { %>
      <li><%= err %></li>
    <% }) %>
  </ul>
<% } %>

<% if (success) { %>
  <p class="success"><%= success %></p>
<% } %>

<!-- STEP 1: REQUEST RESET EMAIL -->
<form id="requestForm" method="POST" action="/password-reset">
  <input type="email" name="email" placeholder="Enter your email" required>
  <button type="submit">Send Reset Link</button>
</form>

<!-- STEP 2: SET NEW PASSWORD -->
<form id="resetForm" style="display:none;">
  <input
    id="password"
    type="password"
    placeholder="Enter new password"
    minlength="6"
    required
  >
  <button type="submit">Reset Password</button>
</form>

<script>
  const supabase = window.supabase.createClient(
    "<%= process.env.SUPABASE_URL %>",
    "<%= process.env.SUPABASE_ANON_KEY %>"
  );

  // Read tokens from URL hash
  const hash = window.location.hash.substring(1);
  const params = new URLSearchParams(hash);

  const access_token = params.get("access_token");
  const refresh_token = params.get("refresh_token");
  const type = params.get("type");

  // If coming from Supabase recovery email
  if (access_token && refresh_token && type === "recovery") {
    // Hide email request form
    document.getElementById("requestForm").style.display = "none";

    // Show password reset form
    document.getElementById("resetForm").style.display = "flex";

    // Establish temporary session
    supabase.auth.setSession({
      access_token,
      refresh_token
    });
  }

  // Handle password update
  document.getElementById("resetForm").addEventListener("submit", async (e) => {
    e.preventDefault();

    const password = document.getElementById("password").value;

    const { error } = await supabase.auth.updateUser({ password });

    if (error) {
      alert(error.message);
    } else {
      // Clear hash for security
      window.location.hash = "";
      window.location.href = "/login?reset=success";
    }
  });
</script>

</body>
</html>

<!DOCTYPE html>
<html lang="<%= lang %>">
<head>
  <%- include('includes/head') %>
  <link rel="stylesheet" href="/style.css">
  <style>
    .dashboard-section {
      margin-bottom: 25px;
      padding: 20px;
      background: #f8f9fa;
      border-radius: 8px;
    }

    .videos {
      display: flex;
      gap: 15px;
      margin-top: 20px;
      justify-content: center;
      flex-wrap: wrap;
    }

    video {
      width: 320px;
      background: #000;
      border-radius: 8px;
    }

    .btn-danger {
      background: #dc3545;
      color: white;
    }
  </style>
</head>
<body>

<%- include('includes/header') %>

<div class="chat-layout">
<div class="video-counseling">

<h1>Video Counseling Dashboard</h1>

<!-- ===================================== -->
<!-- ACTIVE SESSION -->
<!-- ===================================== -->

<% if (activeRoom) { %>
<div class="dashboard-section">
  <h3>Active Session</h3>
  <a href="/video-counseling/<%= activeRoom %>" class="btn">
    Join Active Session
  </a>
</div>
<% } %>


<!-- ===================================== -->
<!-- START SESSION (USER SIDE) -->
<!-- ===================================== -->

<% if (users && users.length > 0 && !activeRoom) { %>
<div class="dashboard-section">
  <h3>Start Counseling Session</h3>

  <% users.forEach(user => { %>
    <form action="/video-counseling" method="POST" style="display:inline;">
      <input type="hidden" name="counselorId" value="<%= user.id %>">
      <button type="submit" class="btn">
        Request Session with <%= user.username %>
      </button>
    </form>
  <% }) %>

</div>
<% } %>


<!-- ===================================== -->
<!-- PENDING REQUESTS (COUNSELOR SIDE) -->
<!-- ===================================== -->

<% if (pendingRequests && pendingRequests.length > 0) { %>
<div class="dashboard-section">
  <h3>Pending Requests</h3>

  <% pendingRequests.forEach(req => { %>
    <div style="margin-bottom:10px;">
      <strong><%= req.username %></strong>

      <form action="/video-counseling/accept/<%= req.id %>" method="POST" style="display:inline;">
        <button class="btn">Accept</button>
      </form>

      <form action="/video-counseling/reject/<%= req.id %>" method="POST" style="display:inline;">
        <button class="btn btn-danger">Reject</button>
      </form>
    </div>
  <% }) %>
</div>
<% } %>


<!-- ===================================== -->
<!-- CREATE LIVE GROUP MEETING -->
<!-- ===================================== -->

<% if (!activeRoom) { %>
<div class="dashboard-section">
  <h3>Create Live Group Meeting</h3>

  <form action="/live-meetings/create" method="POST">
    <input type="text" name="title" placeholder="Meeting Title" required>
    <input type="datetime-local" name="scheduled_at">
    <input type="number" name="duration" placeholder="Duration (minutes)">
    <button type="submit" class="btn">Create Meeting</button>
  </form>
</div>
<% } %>


<!-- ===================================== -->
<!-- LIVE VIDEO ROOM -->
<!-- ===================================== -->

<% if (roomId || meeting) { %>
<div class="dashboard-section">
  <h3>Live Session</h3>

  <div class="videos">
    <video id="localVideo" autoplay muted playsinline></video>
    <video id="remoteVideo" autoplay playsinline></video>
  </div>

  <div style="margin-top:15px;">
    <button id="endBtn" class="btn btn-danger">End Session</button>
  </div>
</div>
<% } %>


<!-- ===================================== -->
<!-- DOCUMENTS (ONLY FOR GROUP MEETING) -->
<!-- ===================================== -->

<% if (meeting) { %>
<div class="dashboard-section">
  <h3>Shared Documents</h3>

  <form action="/live-meetings/<%= meeting.id %>/upload-doc" 
        method="POST" 
        enctype="multipart/form-data">
    <input type="file" name="document" required>
    <button type="submit" class="btn">Upload</button>
  </form>
</div>
<% } %>


<!-- ===================================== -->
<!-- CLEAR OLD SESSIONS -->
<!-- ===================================== -->

<div class="dashboard-section">
  <form action="/video-counseling/clear-ended" method="POST">
    <button class="btn">Clear Old Sessions</button>
  </form>
</div>

</div>
</div>

<script>
const roomId = "<%= roomId || '' %>";

document.getElementById("endBtn")?.addEventListener("click", async () => {
  if (!roomId) return;
  await fetch(`/video-counseling/end/${roomId}`, { method: "POST" });
  window.location.href = "/video-counseling";
});
</script>

</body>
</html>
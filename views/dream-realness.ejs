<!DOCTYPE html>
<html lang="en">

<head>
  <% 
    // Set default variables for the page
    const pageTitle = typeof title !== 'undefined' ? title : "Dream Analyzer | DreamBook";
    const pageDescription = typeof description !== 'undefined' ? description : "Discover if your dream could come true using DreamBook analyzer.";
    const pageCanonical = typeof canonical !== 'undefined' ? canonical : "/dream-analysis";
  %>

  <%- include("includes/head", { title: pageTitle, description: pageDescription, canonical: pageCanonical }) %>

  <!-- Open Graph / Social Sharing -->
  <meta property="og:title" content="<%= pageTitle %>">
  <meta property="og:description" content="<%= pageDescription %>">
  <meta property="og:type" content="website">
  <meta property="og:url" content="https://dreambook.com.et<%= pageCanonical %>">
  <meta property="og:image" content="https://dreambook.com.et/img/og-dream.png">

  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:title" content="<%= pageTitle %>">
  <meta name="twitter:description" content="<%= pageDescription %>">
  <meta name="twitter:image" content="https://dreambook.com.et/img/og-dream.png">

  <!-- Robots -->
  <% if (noindex) { %>
    <meta name="robots" content="noindex, follow">
  <% } %>
</head>

<body>
  <%- include('includes/header', { user, notifications: notifications || [] }) %>

  <main class="wrapper page-wrapper">
    <h1>Dream Analyzer</h1>
<div class ="dream-analyzer-form">
    <% if (result) { %>
      <h2>Analysis Result:</h2> the dream probability to be realized is <strong><%= result.category %>âœ…</strong>
      <p>
      <li><a href="/create-post">Press here</a>  to share your dream with the community for interpretation</li>
      <li><a href="/dream-dictionary">Press here</a> to check the dream symbols in our dictionary</li>
      <li><a href="/inbox">Press here</a> to have your dream privately interpreted</li>
      </p>
    <% } %>
  </div>

    <form action="/dream-realness" method="POST">
      <section>
        <h2>Timing of Dream</h2>
        <label><input type="radio" name="timing" value="evening" required> Evening</label><br>
        <label><input type="radio" name="timing" value="midnight"> Midnight</label><br>
        <label><input type="radio" name="timing" value="post_midnight"> Post-Midnight</label><br>
        <label><input type="radio" name="timing" value="morning"> Morning</label><br>
        <label><input type="radio" name="timing" value="day_dream"> Day Dream</label><br>
      </section>

      <section>
        <h2>Dream Memorability</h2>
        <label><input type="radio" name="memory" value="vivid" required> Vivid Dream</label><br>
        <label><input type="radio" name="memory" value="not_memorable"> Not Memorable</label><br>
      </section>

      <section>
        <h2>Health of Dreamer</h2>
        <label><input type="radio" name="health" value="healthy" required> Healthy</label><br>
        <label><input type="radio" name="health" value="patient"> Patient</label><br>
      </section>

      <section>
        <h2>Emotional State of Dreamer</h2>
        <label><input type="radio" name="emotion" value="not_emotional" required> Not Result of Emotion</label><br>
        <label><input type="radio" name="emotion" value="emotional"> Result of Emotion</label><br>
      </section>

      <br>
      <button type="submit">Check Dream Probability</button>
    </form>
  </main>
<form action="/dashboard" method="get">
  <button type="submit" class="btn">Back to Homepage</button>

</body>
<%- include('includes/footer') %>
</html>
